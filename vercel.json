{
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/([^/]+)",
      "destination": "/$1.html"
    },
    {
      "source": "/([^/]+)/([^/]+)",
      "destination": "/$1/$2.html"
    }
  ],
  "redirects": [
    {
      "source": "/([^/]+)\\.html",
      "destination": "/$1",
      "permanent": true
    },
    {
      "source": "/([^/]+)/([^/]+)\\.html",
      "destination": "/$1/$2",
      "permanent": true
    }
  ]
}